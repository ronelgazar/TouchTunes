<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

    <androidx.preference.PreferenceCategory
        app:title="הגדרות">

        <!-- Interaction Duration -->
        <androidx.preference.EditTextPreference
            android:key="interaction_duration"
            android:title="משך זמן אינטראקציה (בדקות)"
            android:summary="קבע את משך הזמן של האינטראקציה"
            />

        <!-- Interaction Type -->
        <androidx.preference.ListPreference
            android:key="interaction_type"
            android:title="סוג אינטראקציה"
            android:summary="בחר את מצב האינטראקציה"
            android:entries="@array/interaction_type_entries"
            android:entryValues="@array/interaction_type_values"
            />

        <!-- Session Duration -->
        <androidx.preference.EditTextPreference
            android:key="session_duration"
            android:title="משך זמן סשן (בדקות)"
            android:summary="קבע את משך הזמן של הסשן"
            />

        <!-- Sound Interaction -->
        <androidx.preference.SwitchPreferenceCompat
            android:key="sound_interaction"
            android:title="פידבק קולי"
            android:summary="אפשר פידבק קולי לאינטראקציות"
            />

        <!-- Vibration Intensity -->
        <androidx.preference.EditTextPreference
            android:key="vibration"
            android:title="עוצמת הרטט"
            android:summary="קבע את עוצמת הרטט (0 = כבוי, 100 = מלא)"
            />

        <!-- Lighting -->
        <androidx.preference.EditTextPreference
            android:key="lighting"
            android:title="רמת תאורה"
            android:summary="קבע את רמת התאורה"
            />

        <!-- Add more preferences as needed -->

    </androidx.preference.PreferenceCategory>
</androidx.preference.PreferenceScreen>
